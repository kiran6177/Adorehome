<%- include('layouts/header.ejs') %>


      <main class="promain ">
        <div class="filters ">
          <h5 class="fw-bold ">Filters</h5>
            <div class="catfilt">
              <h6 class="text-decoration-underline">Category</h6>
              <p><input type="checkbox" name="catfilter" >&nbsp;&nbsp;Furniture</p>
            </div>
            <div class="catfilt1" style="display: none;">
              <p><span>Category</span>&nbsp;&nbsp;<select name="catfilter" id="" >
                <option value="">Furniture</option>
              </select></p>
            </div>
            <div class="roomfilt">
              <h6 class="text-decoration-underline">Room</h6>
              <p><input type="checkbox" name="roomfilter" >&nbsp;&nbsp;Bathroom</p>
            </div>
            <div class="roomfilt1" style="display: none;">
              <p><span>Room</span>&nbsp;&nbsp;<select name="roomfilter" id="" >
                <option value="">Bathroom</option>
              </select></p>
            </div>
            <div class="pricefilt">
              <h6 class="text-decoration-underline">Price</h6>
              <p><input type="checkbox" name="pricefilter" value="5000">&nbsp;&nbsp;1000 - 5000</p>
              <p><input type="checkbox" name="pricefilter" value="15000">&nbsp;&nbsp;5000 - 15000</p>
              <p><input type="checkbox" name="pricefilter" value="30000">&nbsp;&nbsp;15000 - 30000</p>
            </div>
            <div class="pricefilt1" style="display: none;">
              <p><span>Price</span>&nbsp;&nbsp;<select name="pricefilter" id="" >
                <option value="">1000 - 5000</option>
                <option value="">5000 - 15000</option>
                <option value="">15000 - 30000</option>
              </select></p>
            </div>
            <div class="applybtn "><button type="button">Apply</button></div>
        </div>
      <section class="products pt-5 pt-sm-5">
        <div class="container">
            <div class="row p-3">
                <!-- <h6><img src="/public/images/pin.png" class="pin" alt=""> Our Products</h6> -->
                <h2>Products</h2>
                <% if(locals.products) { for(let i = 0;i < locals.products.length ; i++) { %>
                <% let desc = locals.products[i].description.split('.')[0] %>
                <% let pname = locals.products[i].productname.split(' ')[0] %>
                <div class="product product1 col-md-3 mt-4">
                    <div class="card">
                        <a href="/products/viewproduct?id=<%= locals.products[i]._id %>"><img src="/assets/<%= locals.products[i].mainimage %>" class="card-img-top" alt="..."></a>
                        <div class="card-body">
                          <h5 class="card-title cardhead"><%= pname %></h5>
                          <div class="carddesc"><p class="card-text"><%= desc %></p></div>
                          <div class="cardprice"><p class="card-text ">Rs.<%= locals.products[i].price %></p></div>
                          <div class="wish wbtn"><i class="fa-regular fa-heart"></i></div>
                          <div class="wish1 wbtn"><i class="fa-solid fa-heart"></i></div>
                        <div class="addcart"><button type="button" id="addcartbtn" data-proid="<%= locals.products[i]._id %>"><i class="fa-solid fa-cart-plus"></i></button></div>
                        </div>
                      </div>
                </div>
                <% } } %>
                <!-- <button class="btn viewbtn my-4 text-center p-3"><a href="">View All Products</a></button> -->
            </div>
        </div>
    </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/public/js/productslist.js"></script>
    <%- include('layouts/footer.ejs') %>
