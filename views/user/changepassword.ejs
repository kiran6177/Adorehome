<%- include('layouts/header.ejs') , {udata:locals.udata} %>


    <main class="main mb-4">
        <div class="container">
          <div class="row main-in">
        <div class="card text-center maincard col-md-8 col-12 col-lg-6 " >
            <div class="card-body mainbody">
              <h5 class="card-title mt-4 form-title">CHANGE PASSWORD</h5>
              <form class="form1 w-100" id="changepassword" method="post" action="/profile/changepassword">
                <% if(locals.err) { %> 
                  <div class="error1 alert alert-danger w-75"><%= locals.err  %></div>
                  <% } %>
                <div class="my-5 field w-75 ">
                  <input type="password" class="form-control input " placeholder="" name="oldpassword" id="oldpassword">
                  <label for="oldpassword" class="form-label label">Old Password</label>
                  <p class="error mb-2" id="pass1error" style="display: none;"></p>
                </div>
                <div class="my-5 field w-75 ">
                    <input type="password" class="form-control input " placeholder="" name="newpassword" id="newpassword">
                    <label for="newpassword" class="form-label label">New Password</label>
                    <p class="error mb-2" id="pass2error" style="display: none;"></p>
                  </div>
                <div class="my-5 field w-75 ">
                    <input type="password" class="form-control input " placeholder="" name="confirmpassword" id="confirmpassword">
                    <label for="confirmpassword" class="form-label label">Confirm Password</label>
                  <p class="error mb-2" id="confirmpasserror" style="display: none;"></p>
                  </div>
                <input type="submit" class="logbtn mt-5 mb-3" value="Change Password">

              </form>
            </div>
          </div>
        </div>
        </div>
      </main>




      <%- include('layouts/footer.ejs')  %>
