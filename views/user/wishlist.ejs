<%- include('layouts/header.ejs') %>

<main class="promain pb-5">
    <section class="products pt-5 pt-sm-5">
      <div class="container">
          <div class="row p-3">
              <h2 class=" mt-4 mb-3">WISHLIST</h2>
              
            <% if(locals.udata && locals.udata.wishlist && locals.udata.wishlist.length > 0) { locals.udata.wishlist.forEach(element => { %>
              
            <div class="cart col-md-6 col-lg-12 mt-4">
                  <div class="card cartcard" >
                      <div class="card-body cartbody">
                        <a href="/products/viewproduct?id=<%= element.product_id._id %>"><img src="/assets/<%= element.product_id.mainimage %>" alt="" width="200px" height="200px"></a>
                        <div class="cartdetails">
                            <h4 class="card-title prohead fw-bold "><%= element.product_id.productname %></h4>
                            <p><%= element.product_id.description.split('.')[0] %></p>
                        </div>
                        <div class="cartprice">
                        <h6> Price</h6>
                            <p>Rs.<%= element.product_id.price %></p>
                        </div>
                            <div class="addtocartbtn" data-proid="<%= element.product_id._id %>"><button type="button">Add to Cart</button></div>
                            <div class="removebtn" data-proid="<%= element.product_id._id %>"><i class="fa-solid fa-trash"></i></div>

                            </div>
                        </div>

            </div>
            <%  }); }else{%>
                <div class="cart  col-lg-12 mt-4">
              
                    <div class="card m-auto border-0 h-100 ">
                      <div class="card-body h-100 d-flex justify-content-center align-items-center">
                        <div class="card-title d-flex flex-column justify-content-center align-items-center ">
                          <img src="/public/images/favicon.png" alt="" width="300rem" height="300rem">
                          <h2>Wishlist is Empty!!</h2>
                        </div>
                      </div>
                    </div>
                    </div>
            <% } %>

                      

                    </div>
              </div>
              
              

          </div>
      </div>
  </section>
  </main>

<script src="/public/js/wishlist.js"></script>
<%- include('layouts/footer.ejs') %>